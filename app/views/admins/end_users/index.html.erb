<div class="container">
    <div class="row col-md-8 col-md-offset-1">
        <h2>会員一覧画面</h2>
    </div>


    <div class="row col-md-8 col-md-offset-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                        <th>ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @end_users.each do |end_user| %>
                        
                    <tr>
                        <td><%= end_user.id %></td>
                        <td><%= link_to "#{end_user.surname } #{end_user.name}", admins_end_user_path(end_user.id) %></td>
                        <td><%= end_user.email %></td>
                        <% if end_user.deleted_at != nil %>
                         <td>退会済み</td>
                        <% else %>
                            <td>有効</td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
    </div>
</div>
