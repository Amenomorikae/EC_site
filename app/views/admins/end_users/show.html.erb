<div class="container">
    <div class="row">
        <h2>会員詳細画面</h2>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
        
            <table class="table">
                <tbody>
                    <tr>
                        <td>顧客ID</td>
                        <td><%= @end_user.id %>　<span class= "btn-primary"><%= @end_user.is_deleted %></span></td>
                    </tr>
                    <tr>
                        <td>氏名</td>
                        <td><%= @end_user.surname %> <%= @end_user.name %></td>
                    </tr>
                    <tr>
                        <td>カナ</td>
                        <td><%= @end_user.kana_surname %>　<%= @end_user.kana_name %>
                        </td>
                    </tr>
                    <tr>
                        <td>郵便番号</td>
                        <td>〒<%= @end_user.postal_code %></td>
                        <!--- slice.(1..4)で分割表示することも可--->
                    </tr>
                    <tr>
                        <td>電話番号</td>
                        <td><%= @end_user.phone_number %></td>
                    </tr>
                    <tr>
                        <td>メールアドレス</td>
                        <td><%= @end_user.email %></td>
                    </tr>
                </tbody>
            </table>
            <br>
           
           <span><button type="button" class="btn btn-primary"><%= link_to "編集する", edit_admins_end_user_path(@end_user.id) %></button></span>
        </div>
